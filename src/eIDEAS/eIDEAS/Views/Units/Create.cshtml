@model eIDEAS.Models.UnitDivision

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<h4>Unit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Division
                <select asp-for="unit.DivisionID">
                    @foreach(Division division in Model.GetDivisions(null))
                    {
                        <option class="unit-option" value="@division.ID">@division.Name</option>
                    }
                </select>
                <span asp-validation-for="unit.DivisionID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="unit.Name" class="control-label"></label>
                <input asp-for="unit.Name" class="form-control" />
                <span asp-validation-for="unit.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
